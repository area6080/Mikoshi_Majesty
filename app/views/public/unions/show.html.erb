<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6 border border-light mt-5">
      <h5 class="text-center p-4 mb-0">メンバー一覧</h5>
        
      <div class="row d-flex justify-content-center">
        <div class="col-10">
          <table class="table table-borderless matsuri-style">
            <thead>
              <tr>
                <th class="col-2"></th>
                <th class="col-2"></th>
                <th class="col-4"></th>
                <th class="col-2"></th>
              </tr>
            </thead>
            <tbody>
              <% @members.each do |user| %>
              <tr>
                <td></td>
                <td>
                  <%= image_tag user.get_profile_image(60,60), class: "rounded-lg" %>
                </td>
                <td><%= user.name %></td>
                <td></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-2">
    <%= link_to "イベントへ戻る", post_event_path(@post_event),class: "btn btn-primary" %>
  </div>
</div>
