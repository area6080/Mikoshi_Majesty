
<div class="container">
  <div class="row mt-3">
    <div class="col-md-6 mx-auto">
      <h2>User info</h2>
      
      <%= form_with model: @user,method: :patch do |f| %>
      
        <p>Image</p>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: "150x150" %>
          <% else %>
            <%= image_tag "no_image.jpg", size: "150x150" %>
          <% end %>
        <%= f.file_field :profile_image, accept: "image/*" %><br>
        <p>Name</p>
        <%= f.text_field :name, autofocus: true, class: "form-control" %><br>
        <p>Introduction</p>
        <%= f.text_area :introduction,class: "form-control" %><br>
        <%= f.submit 'Update User', class:'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
