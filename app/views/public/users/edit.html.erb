
<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-6">
      <%= form_with model: @user, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :Image %></td>
            <td>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image, size: "150x150" %>
              <% else %>
                <%= image_tag "no_image.jpg", size: "150x150" %>
              <% end %>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :名前 %></td>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :自己紹介 %></td>
            <td><%= f.text_area :introduction, class: "form-control" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit 'Update User', class:'btn btn-secondary' %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

