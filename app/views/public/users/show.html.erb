<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <div class="row mt-5">
        <div class="col-4 d-flex justify-content-center">
          <%= image_tag @user.get_profile_image(150,150), class: "rounded-lg" %>
        </div>
        <div class="col-7 offset-1">
          <div class="row">
            <h4><strong><%= @user.name %></strong></h4>
          </div>
          <div class="row mt-3">
            <h6><%= @user.introduction %></h6>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row d-flex justify-content-center">
    <% if @user == current_user && !current_user.guest_user? %>
      <%= link_to "プロフィール編集", edit_user_path(@user),class:'btn btn-info' %>
    <% end %>
  </div>

  <div class="row d-flex justify-content-center mt-5">
    <div class="col-10">
      <table class="table matsuri-style">
        <thead>
          <tr>
            <th class="col-5"><h6>イベント一覧</h6></th>
            <th class="col-2"></th>
            <th class="col-5"></th>
          </tr>
        </thead>
        <tbody>
          <% @post_events.each do |post_event| %>
          <tr>
            <td>
            <%= link_to(post_event_path(post_event.id), class: "matsuri-style") do %>
              <strong><i class="fa-regular fa-star"></i><span> <%= post_event.title %></span></strong>
            <% end %>
            </td>
            <td><%= post_event.event_date %></td>
            <td><%= post_event.address %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <% if @user == current_user %>
    <div class="row d-flex justify-content-center mt-5">
      <div class="col-10">
        <table class="table matsuri-style">
          <thead>
            <tr>
              <th class="col-5"><h6>お気に入りリスト</h6></th>
              <th class="col-2"></th>
              <th class="col-5"></th>
            </tr>
          </thead>
          <tbody>
            <% @fav_events.each do |post_event| %>
            <tr>
              <td>
              <%= link_to(post_event_path(post_event.id), class: "matsuri-style") do %>
                <strong><i class="fa-regular fa-star"></i><span> <%= post_event.title %></span></strong>
              <% end %>
              </td>
              <td><%= post_event.event_date %></td>
              <td><%= post_event.address %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
  
</div>


