<div class="row mt-2">
  <%= form_with model: [post_event, post_comment] do |f| %>
    <%= f.text_area :comment, size: "50x2", placeholder: "コメントをどうぞ！" %>
    <%= f.submit "送信", class: "btn btn-primary" %>
  <% end %>
  <p>コメント件数：<%= post_event.post_comments.count %></p>
</div>

<div class="row matsuri-style mt-2">
    <% post_event.post_comments.each do |post_comment| %>
      <div class="col-12 comment-box my-2">
        <%= post_comment.comment %>
      </div>
      <div class="col-1 offset-3 comment-box">
        <%= image_tag post_comment.user.get_profile_image(30,30), class: "rounded-circle" %>
      </div>
      <div class="col-3 comment-box">
        <%= post_comment.user.name %>
      </div>
      <div class="col-3 comment-box  d-flex justify-content-center">
        <%= l post_comment.created_at, format: :short %>
      </div>
      <div class="col-2 comment-box">
        <% if post_comment.user == current_user %>
        <%= link_to "削除", post_event_post_comment_path(post_comment.post_event, post_comment), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "削除してよろしいですか?" %>
        <% end %>
      </div>
    <% end %>
</div>
