<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 mx-2 shadow-lg rounded px-0 my-5">
      <h5 class="text-center p-4 mb-0">イベント投稿フォーム</h5>
      <div class="form-body p-4">
        
        <%= form_with model: @post_event do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
        
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :title, class: "form-control", placeholder: "イベント名" %>
          </div>
          
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-location-dot"></i></span>
            </div>
            <%= f.text_field :event_date, class: "form-control", placeholder: "開催日時" %>
          </div>
          
          <!--<div class="input-group mb-3 mt-4">-->
          <!--  <div class="input-group-prepend">-->
          <!--    <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-tenge-sign"></i></span>-->
          <!--  </div>-->
          <!--  %= text_field_tag :zipcode, nil, class: "form-control", placeholder: "郵便番号から住所を検出しません" %>-->
          <!--</div>-->
          
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-location-dot"></i></span>
            </div>
            <%= f.text_field :address, class: "form-control", placeholder: "住所" %>
          </div>
          
          <%= f.text_area :caption, class: "form-control", rows: "3", placeholder: "イベントの説明をどうぞ" %>
          <hr>
          <%= f.submit '投稿', class: "btn  btn-block btn-info mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
