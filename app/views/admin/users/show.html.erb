<div class="container">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-2">
      <%= image_tag @user.get_profile_image(100,100), class: "rounded-lg" %>
    </div>
    <div class="col-4">
      <table class="table table-borderless matsuri-style">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-3">
    <div class="col-4 d-flex justify-content-center">
      <%= link_to "管理者権限で退会", user_path(@user), method: :delete, class:'btn btn-block btn-danger mt-1', "data-confirm" => "本当に退会させますか?" %>
    </div>
  </div>
</div>
