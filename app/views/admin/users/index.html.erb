
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <div class="row mt-5">
        <table class="table matsuri-style">
          <thead>
            <tr>
              <th class="col-1">ID</th>
              <th class="col-3">名前</th>
              <th class="col-3">メールアドレス</th>
              <th class="col-5">自己紹介</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td>
                <%= link_to(admin_user_path(user.id), class: "matsuri-style") do %>
                  <strong><i class="fa-regular fa-user"></i><span> <%= user.name %></span></strong>
                <% end %>
                </td>
                <td><%= user.email %></td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row d-flex justify-content-center mt-2">
        <div class="col-4 d-flex justify-content-center">
          <%= link_to 'マップに戻る', map_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>

