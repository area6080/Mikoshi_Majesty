
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <div class="row mt-5">
        <table class="table matsuri-style">
          <thead>
            <tr>
              <th class="col-1">ID</th>
              <th class="col-4">グループ名</th>
            </tr>
          </thead>
          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <td><%= group.id %></td>
                <td>
                <%= link_to(admin_group_path(group.id), class: "matsuri-style") do %>
                  <strong><i class="fa-solid fa-people-group"></i><span> <%= group.name %></span></strong>
                <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row d-flex justify-content-center mt-2">
        <div class="col-4 d-flex justify-content-center">
          <%= link_to 'マップに戻る', map_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
