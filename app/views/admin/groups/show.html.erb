<div class="container">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-2">
      <%= image_tag @group.post_event.get_image(100,100), class: "rounded-lg" %>
      <%= @group.post_event.title %>
    </div>
    <div class="col-4">
      <table class="table table-borderless matsuri-style">
        <tbody>
          <tr>
            <td>グループ名</td>
            <td><%= @group.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-3">
    <div class="col-4 d-flex justify-content-center">
      <%= link_to "管理者権限で削除する", group_path(@group), method: :delete, class:'btn btn-block btn-danger mt-1', "data-confirm" => "本当に削除しますか?" %>
    </div>
  </div>
</div>
